<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="stylesheet" href="/css/style.css" />
        <title>Movies</title>
    </head>
    <body>
      <h1>Movies</h1>
      <div class="line"></div>
      <%- include('./includes/nav') %>
      <main>
        <% movies.forEach((movie) => { %>
          <div class="movie-container">
            <h2><%= movie.title%></h2>
            <img src="<%= movie.poster%>" alt="<%= movie.title%>">
            <p><%= movie.director%></p>
            <p><%= movie.year%></p>
            <div class="btn-details">
            <a href="/api/get/<%=movie.id%>">Details</a>
          </div>
          <div class="btn-update">
            <a href="/api/update-form/<%=movie.id%>">Update</a>
          </div>
          <div class="btn-delete">
            <a href="/api/delete/<%=movie.id%>">Delete</a>
          </div>
            
          </div>
        <% }); %>
        <div>

        </div>
      </main>
    </body>
</html>
